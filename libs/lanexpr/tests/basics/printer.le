let
  fun print_int(x: int) : void = let

     fun print_rec(x: int) : void =
     	 if !(x == 0) then (
	    print_rec(x / 10);
	    putc(48 + (x % 10))
	 )
     in 

     	if x < 0 then (
     	   putc(45);
	   print_rec(-x)
     	)

     	else if x == 0 then putc(48)
	else print_rec(x)
 

  fun printnl() : void = putc(10)

  fun println_int(x: int) : void = (
      print_int(x);
      println()
  )

  in (
    println_int(18);
    println_int(0);
    println_int(-6);
    println_int(8);
    println_int(-456)
  )